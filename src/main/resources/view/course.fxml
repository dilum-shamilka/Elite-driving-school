<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #0D1B2A;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.CourseController">
    <children>
        <!-- Course Details Panel -->
        <AnchorPane layoutX="26.0" layoutY="31.0" prefHeight="233.0" prefWidth="1148.0" style="-fx-background-color: #1B263B; -fx-background-radius: 10;">
            <children>
                <Label layoutX="49.0" layoutY="21.0" text="Course Details" textFill="#BBDEFB">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="txtCourseName" layoutX="49.0" layoutY="62.0" prefHeight="40.0" prefWidth="250.0" promptText="Course Name" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                <TextField fx:id="txtDuration" layoutX="324.0" layoutY="62.0" prefHeight="40.0" prefWidth="250.0" promptText="Duration (months)" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                <TextField fx:id="txtFee" layoutX="599.0" layoutY="62.0" prefHeight="40.0" prefWidth="250.0" promptText="Fee" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                <ComboBox fx:id="cmbInstructor" layoutX="874.0" layoutY="62.0" prefHeight="40.0" prefWidth="250.0" promptText="Select Instructor" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />

                <Button fx:id="btnSaveCourse" layoutX="49.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2E86C1; -fx-background-radius: 5;" text="Save" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdateCourse" layoutX="159.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #1B4F72; -fx-background-radius: 5;" text="Update" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnDeleteCourse" layoutX="269.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #C0392B; -fx-background-radius: 5;" text="Delete" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnResetCourse" layoutX="379.0" layoutY="120.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #566573; -fx-background-radius: 5;" text="Reset" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <!-- Courses Table Panel -->
        <AnchorPane layoutX="26.0" layoutY="350.0" prefHeight="352.0" prefWidth="1148.0" style="-fx-background-color: #1B263B; -fx-background-radius: 10;">
            <children>
                <TableView fx:id="tblCourses" layoutX="14.0" layoutY="14.0" prefHeight="324.0" prefWidth="1120.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-border-color: #BBDEFB; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colCourseId" prefWidth="100.0" text="Course ID" />
                        <TableColumn fx:id="colCourseName" prefWidth="300.0" text="Course Name" />
                        <TableColumn fx:id="colDuration" prefWidth="150.0" text="Duration" />
                        <TableColumn fx:id="colFee" prefWidth="150.0" text="Fee" />
                        <TableColumn fx:id="colInstructorId" prefWidth="150.0" text="Instructor ID" />
                        <TableColumn fx:id="colInstructorName" prefWidth="250.0" text="Instructor Name" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
