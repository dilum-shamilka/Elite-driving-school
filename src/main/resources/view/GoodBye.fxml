<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="350.0" prefWidth="400.0"
            style="-fx-background-color: linear-gradient(to bottom, #0D1B2A, #1B263B);"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.GoodbyeController">

    <children>
        <Label layoutX="0.0" layoutY="40.0" alignment="CENTER" prefHeight="50.0" prefWidth="400.0"
               text="Thank You &amp; Goodbye!" textAlignment="CENTER"
               style="-fx-text-fill: #E0E0E0; -fx-font-weight: bold;">
            <font>
                <Font size="28.0" />
            </font>
            <effect>
                <DropShadow color="#00000099" radius="5" />
            </effect>
        </Label>

        <Label layoutX="0.0" layoutY="100.0" alignment="CENTER" prefHeight="30.0" prefWidth="400.0"
               text="We hope to see you again soon!" textAlignment="CENTER"
               style="-fx-text-fill: #90CAF9;">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <!-- Driving School Info -->
        <Label layoutX="0.0" layoutY="140.0" alignment="CENTER" prefHeight="60.0" prefWidth="400.0"
               text="Elite Driving School â€“ Learn to drive safely and confidently with our experienced instructors. Modern vehicles and structured lessons for all students."
               textAlignment="CENTER" wrapText="true"
               style="-fx-text-fill: #BBDEFB; -fx-font-size: 14px;">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Button fx:id="btnOk" layoutX="150.0" layoutY="220.0" mnemonicParsing="false" text="OK" onAction="#handleOkButton"
                prefWidth="100.0" prefHeight="40.0"
                style="-fx-background-color: #1B263B; -fx-text-fill: #BBDEFB; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000066" radius="5" spread="0.2" />
            </effect>
        </Button>
    </children>
</AnchorPane>
