<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #2D3E50;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.InstructorController">
