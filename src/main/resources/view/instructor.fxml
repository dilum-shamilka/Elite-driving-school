                        <TableColumn fx:id="colPhone" prefWidth="150.0" text="Phone" />
                        <TableColumn fx:id="colAvailability" prefWidth="150.0" text="Availability" />
                        <TableColumn fx:id="colSpecialization" prefWidth="250.0" text="Specialization" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>