            <children>
                <Label layoutX="49.0" layoutY="21.0" text="Instructor Details" textFill="#ECF0F1">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="txtName" layoutX="49.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Name" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <TextField fx:id="txtEmail" layoutX="49.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Email" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <TextField fx:id="txtPhone" layoutX="394.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Phone" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <ComboBox fx:id="cmbAvailability" layoutX="394.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Availability" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <ComboBox fx:id="cmbSpecialization" layoutX="740.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Specialization" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />

