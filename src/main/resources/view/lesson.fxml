<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #0D1B2A;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.LessonController">
    <children>
        <AnchorPane layoutX="26.0" layoutY="31.0" prefHeight="310.0" prefWidth="1148.0" style="-fx-background-color: #1B263B; -fx-background-radius: 10;">
            <children>
                <Label layoutX="49.0" layoutY="21.0" text="Lesson Details" textFill="#BBDEFB">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <VBox layoutX="49.0" layoutY="62.0" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" text="Date:" textFill="#BBDEFB" />
                                <DatePicker fx:id="dpDate" prefWidth="200.0" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1;" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" text="Time:" textFill="#BBDEFB" />
                                <TextField fx:id="txtTime" prefWidth="200.0" promptText="HH:mm" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" text="Status:" textFill="#BBDEFB" />
                                <ComboBox fx:id="cmbStatus" prefWidth="200.0" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox layoutX="394.0" layoutY="62.0" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" text="Instructor:" textFill="#BBDEFB" />
                                <ComboBox fx:id="cmbInstructor" prefWidth="200.0" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" text="Course:" textFill="#BBDEFB" />
                                <ComboBox fx:id="cmbCourse" prefWidth="200.0" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" text="Student:" textFill="#BBDEFB" />
                                <ComboBox fx:id="cmbStudent" prefWidth="200.0" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Button fx:id="btnSaveLesson" layoutX="28.0" layoutY="207.0" onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2E86C1; -fx-background-radius: 5;" text="Save" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdateLesson" layoutX="163.0" layoutY="207.0" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #1B4F72; -fx-background-radius: 5;" text="Update" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnDeleteLesson" layoutX="294.0" layoutY="207.0" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #C0392B; -fx-background-radius: 5;" text="Delete" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnResetLesson" layoutX="438.0" layoutY="207.0" onAction="#btnResetOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #566573; -fx-background-radius: 5;" text="Reset" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="26.0" layoutY="370.0" prefHeight="310.0" prefWidth="1148.0" style="-fx-background-color: #1B263B; -fx-background-radius: 10;">
            <children>
                <TableView fx:id="tblLessons" layoutX="14.0" layoutY="14.0" prefHeight="282.0" prefWidth="1120.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-border-color: #BBDEFB; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colLessonId" prefWidth="100.0" text="Lesson ID" />
                        <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
                        <TableColumn fx:id="colTime" prefWidth="150.0" text="Time" />
                        <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
                        <TableColumn fx:id="colInstructorId" prefWidth="150.0" text="Instructor ID" />
                        <TableColumn fx:id="colCourseId" prefWidth="150.0" text="Course ID" />
                        <TableColumn fx:id="colStudentId" prefWidth="150.0" text="Student ID" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>