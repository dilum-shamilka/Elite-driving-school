<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="598.0"
            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #0a1a33, #000000);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.AdminLoginController">

    <children>
        <!-- Title -->
        <Label layoutX="49.0" layoutY="81.0" text="Admin Login" textFill="#ffffff">
            <font>
                <Font name="System Bold" size="28.0"/>
            </font>
        </Label>

        <!-- Username Label -->
        <Label layoutX="49.0" layoutY="218.0" text="Username:" textFill="#cccccc">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>

        <!-- Username Field -->
        <TextField fx:id="txtUsername" layoutX="150.0" layoutY="213.0" prefWidth="280.0" promptText="Enter username"
                   style="-fx-background-color: #1a1a1a; -fx-text-fill: white; -fx-border-color: #3a4a63; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8;"/>

        <!-- Password Label -->
        <Label layoutX="49.0" layoutY="269.0" text="Password:" textFill="#cccccc">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>

        <!-- Password Field -->
        <PasswordField fx:id="txtPassword" layoutX="150.0" layoutY="264.0" prefWidth="280.0" promptText="Enter password"
                       style="-fx-background-color: #1a1a1a; -fx-text-fill: white; -fx-border-color: #3a4a63; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8;"/>

        <!-- Login Button -->
        <Button layoutX="458.0" layoutY="331.0" text="Login" onAction="#btnLoginOnAction"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"/>

        <!-- Logo -->
        <ImageView layoutX="324.0" layoutY="40.0" fitHeight="141.0" fitWidth="171.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../image/logo.jpg"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
