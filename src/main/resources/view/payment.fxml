<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #2D3E50;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PaymentController">
    <children>
        <AnchorPane layoutX="26.0" layoutY="31.0" prefHeight="233.0" prefWidth="1148.0" style="-fx-background-color: #34495E; -fx-background-radius: 10;">
            <children>
                <Label layoutX="49.0" layoutY="21.0" text="Payment Details" textFill="#ECF0F1">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="txtAmount" layoutX="49.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Amount" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <DatePicker fx:id="dpDate" layoutX="49.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Date" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <ComboBox fx:id="cmbStatus" layoutX="394.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Status" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />
                <ComboBox fx:id="cmbStudent" layoutX="394.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Select Student" style="-fx-background-radius: 5; -fx-background-color: #ECF0F1;" />

                <Button fx:id="btnSavePayment" layoutX="740.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #27AE60; -fx-background-radius: 5;" text="Save" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdatePayment" layoutX="850.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #3498DB; -fx-background-radius: 5;" text="Update" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnDeletePayment" layoutX="960.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #E74C3C; -fx-background-radius: 5;" text="Delete" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnResetPayment" layoutX="1070.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #95A5A6; -fx-background-radius: 5;" text="Reset" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="26.0" layoutY="350.0" prefHeight="352.0" prefWidth="1148.0" style="-fx-background-color: #34495E; -fx-background-radius: 10;">
            <children>
                <TableView fx:id="tblPayments" layoutX="14.0" layoutY="14.0" prefHeight="324.0" prefWidth="1120.0" style="-fx-background-color: #ECF0F1; -fx-background-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colPaymentId" prefWidth="150.0" text="Payment ID" />
                        <TableColumn fx:id="colAmount" prefWidth="250.0" text="Amount" />
                        <TableColumn fx:id="colDate" prefWidth="250.0" text="Date" />
                        <TableColumn fx:id="colStatus" prefWidth="250.0" text="Status" />
                        <TableColumn fx:id="colStudentId" prefWidth="150.0" text="Student ID" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>