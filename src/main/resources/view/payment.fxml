<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #0D1B2A;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PaymentController">
    <children>
        <AnchorPane layoutX="26.0" layoutY="31.0" prefHeight="233.0" prefWidth="1148.0" style="-fx-background-color: #1B263B; -fx-background-radius: 10;">
            <children>
                <Label layoutX="49.0" layoutY="21.0" text="Payment Details" textFill="#BBDEFB">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <TextField fx:id="txtAmount" layoutX="49.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Amount" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                <DatePicker fx:id="dpDate" layoutX="49.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Date" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                <ComboBox fx:id="cmbStatus" layoutX="394.0" layoutY="62.0" prefHeight="40.0" prefWidth="320.0" promptText="Status" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />
                <ComboBox fx:id="cmbStudent" layoutX="394.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Select Student" style="-fx-background-radius: 5; -fx-background-color: #0D1B2A; -fx-text-fill: #ECEFF1; -fx-prompt-text-fill: #BBDEFB;" />

                <Button fx:id="btnSavePayment" layoutX="740.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2E86C1; -fx-background-radius: 5;" text="Save" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdatePayment" layoutX="850.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #1B4F72; -fx-background-radius: 5;" text="Update" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnDeletePayment" layoutX="960.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #C0392B; -fx-background-radius: 5;" text="Delete" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnResetPayment" layoutX="1070.0" layoutY="62.0" mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #566573; -fx-background-radius: 5;" text="Reset" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="26.0" layoutY="350.0" prefHeight="352.0" prefWidth="1148.0" style="-fx-background-color: #1B263B; -fx-background-radius: 10;">
            <children>
                <TableView fx:id="tblPayments" layoutX="14.0" layoutY="14.0" prefHeight="324.0" prefWidth="1120.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-border-color: #BBDEFB; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colPaymentId" prefWidth="150.0" text="Payment ID" />
                        <TableColumn fx:id="colAmount" prefWidth="250.0" text="Amount" />
                        <TableColumn fx:id="colDate" prefWidth="250.0" text="Date" />
                        <TableColumn fx:id="colStatus" prefWidth="250.0" text="Status" />
                        <TableColumn fx:id="colStudentId" prefWidth="150.0" text="Student ID" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>