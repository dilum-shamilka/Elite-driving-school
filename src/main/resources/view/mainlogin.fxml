<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(to bottom right, #f2f2f2, #d1d1d1);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.MainLoginController">
    <children>
        <Label layoutX="50.0" layoutY="50.0" text="Select Your Role" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0" style="-fx-text-fill: #444444;">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="50.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button onAction="#btnAdminOnAction" prefHeight="40.0" prefWidth="150.0" text="Admin" style="-fx-background-color: #7a8693; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5); -fx-cursor: hand;" />
                <Button onAction="#btnReceptionOnAction" prefHeight="40.0" prefWidth="150.0" text="Receptionist" style="-fx-background-color: #555c65; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5); -fx-cursor: hand;" />
            </children>
        </HBox>
    </children>
</AnchorPane>