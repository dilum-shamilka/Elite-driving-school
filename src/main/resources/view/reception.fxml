<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #000000, #0A192F);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.ReceptionLoginController">

    <children>
        <ImageView fitHeight="208.0" fitWidth="211.0" layoutX="34.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="34.0" AnchorPane.topAnchor="125.0">
            <image>
                <Image url="@../image/logo.jpg" />
            </image>
        </ImageView>

        <Label layoutX="58.0" layoutY="34.0" text="Reception Login" textFill="white" AnchorPane.leftAnchor="58.0" AnchorPane.topAnchor="34.0">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <Label layoutX="292.0" layoutY="148.0" text="Username:" textFill="white" AnchorPane.leftAnchor="292.0" AnchorPane.topAnchor="148.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <TextField fx:id="txtUsername" layoutX="389.0" layoutY="148.0" prefHeight="27.0" prefWidth="182.0"
                   style="-fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #0A192F; -fx-border-radius: 4; -fx-background-radius: 4;"
                   AnchorPane.leftAnchor="389.0" AnchorPane.topAnchor="148.0" />

        <Label layoutX="294.0" layoutY="220.0" text="Password:" textFill="white" AnchorPane.leftAnchor="294.0" AnchorPane.topAnchor="220.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <PasswordField fx:id="txtPassword" layoutX="389.0" layoutY="220.0" prefHeight="27.0" prefWidth="182.0"
                       style="-fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #0A192F; -fx-border-radius: 4; -fx-background-radius: 4;"
                       AnchorPane.leftAnchor="389.0" AnchorPane.topAnchor="220.0" />

        <Button fx:id="btnLogin" layoutX="456.0" layoutY="294.0" mnemonicParsing="false" onAction="#btnLoginOnAction"
                prefHeight="34.0" prefWidth="96.0"
                style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-border-radius: 6; -fx-cursor: hand;"
                text="Login" AnchorPane.bottomAnchor="66.0" AnchorPane.leftAnchor="456.0">
            <font>
                <Font size="18.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
