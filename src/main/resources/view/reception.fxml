<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="598.0" style="-fx-background-color: linear-gradient(to bottom right, #f2f2f2, #d1d1d1);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ReceptionController">
    <children>
        <Label layoutX="50.0" layoutY="30.0" text="Receptionist Sign Up" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="-50.0" AnchorPane.topAnchor="30.0" style="-fx-text-fill: #444444;">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="New Username:" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="150.0" style="-fx-text-fill: #555c65;">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtNewUsername" promptText="Enter new username" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="150.0" style="-fx-background-color: #ffffff; -fx-border-color: #a9a9a9; -fx-border-radius: 8; -fx-padding: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" />

        <Label text="New Password:" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="200.0" style="-fx-text-fill: #555c65;">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtNewPassword" promptText="Enter new password" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #a9a9a9; -fx-border-radius: 8; -fx-padding: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" />

        <Label text="Confirm Password:" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="250.0" style="-fx-text-fill: #555c65;">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtConfirmPassword" promptText="Confirm new password" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #a9a9a9; -fx-border-radius: 8; -fx-padding: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" />

        <Button onAction="#btnSignupOnAction" text="Sign Up" AnchorPane.bottomAnchor="68.0" AnchorPane.rightAnchor="50.0" style="-fx-background-color: #7a8693; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5); -fx-cursor: hand;" />
    </children>
</AnchorPane>